@model ActivityTracker.Models.Activity

<h1>Add a New Activity!</h1>

<div class="col-6">
    <form method="post">
        <div class="form-group">
            <label for="namefield">Name</label>
            <input class="form-control" id="namefield" placeholder="Enter an activity name (e.g. Cleaning Yard)" asp-for="Name"/>
        </div>
        <div class="form-group">
            <label for="datefield">Date</label>
            <input class="form-control" id="datefield" placeholder="Enter a date in standard DateTime format" asp-for="Date" />
        </div>
        <div class="row">
            <div class="col-6">
                <input type="submit" value="Create" class="btn btn-info form-control" id="submitbtn">
            </div>
            <div class="col-6">
                <a class="btn btn-secondary form-control" id="submitbtn" asp-action="Index">Go Back to Home</a>
            </div>
        </div>
    </form>
</div>