@model ActivityTracker.Models.Activity

<h1>Edit Activity</h1>

<div class="col-6">
    <form method="post">
        <div class="form-group">
            <label for="namefield">Name</label>
            <input class="form-control" id="namefield" text="@Model.Name" asp-for="Name" />
        </div>
        <div class="form-group">
            <label for="datefield">Date</label>
            <input class="form-control" id="datefield" value="@Model.Date" asp-for="Date" />
        </div>
        <div class="row">
            <div class="col-6">
                <input type="submit" value="Update" asp-action="Edit" class="btn btn-info form-control">
            </div>
            <div class="col-6">
                <a class="btn btn-secondary form-control" asp-action="Index">Go Back to Home</a>
            </div>
        </div>
    </form>
</div>